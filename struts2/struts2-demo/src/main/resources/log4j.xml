    <!-- 默认所有业务日志异步输出到文件business.log; 其他特殊框架性的日志输出到jssb.log -->
    <root>
    	<!-- 主要分为error,warn,info,debug四个级别，也是使用最多的四种，日志级别从左至右依次增加 -->
        <priority value="error" />
          <appender-ref ref="LOCAL_BUSINESS_LOG" />
        <!--  <appender-ref ref="ASYNC_BUSINESS_LOG" />-->
       
    </root>

</log4j:configuration>
